doctype
html(lang='es')
    head
        meta(charset='utf-8')
        title Carpinteria-login
        link(rel="stylesheet", href="css/app.css")
    body(class="bg-slate-300")

    main(class="flex flex-col gap-6 justify-center items-center h-screen")

        h1(class=" text-5xl font-extrabold") Crea una Cuenta en 
            span(class="text-amber-700") Carpinteria.com

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores   
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg

        form(noValidate action="crear-cuenta" method="post" class=" p-3 flex flex-col gap-5 items-center")
            div(class="flex flex-col gap-2") 
                div(class="flex flex-col gap-1")
                    span(class="text-2xl") Nombre 
                    input(value= usuario ? usuario.nombre : "", type="text" class="bg-slate-200 w-72 p-1" name="nombre") 
                div(class="flex flex-col gap-1")
                    span(class="text-2xl") Correo 
                    input(value= usuario ? usuario.email : "", type="email" class="bg-slate-200 w-72 p-1" name="email") 
                div(class="flex flex-col gap-1")
                    span(class="text-2xl") Contraseña
                    input(type="password" class="bg-slate-200 w-72 p-1" name="password")
                div(class="flex flex-col gap-1")
                    span(class="text-2xl") Repite la Contraseña
                    input(type="password" class="bg-slate-200 w-72 p-1" name="repit_password")
                div(class="flex justify-between")
                    a(href="/login" class="text-sm text-gray-600 hover:text-black") Inicia Sesión

            input(type="submit" value="Crear Cuenta" class="bg-amber-600 hover:bg-amber-500 cursor-pointer transition duration-300 px-5 py-2 font-extrabold") 
    