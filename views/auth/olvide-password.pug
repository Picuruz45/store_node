doctype
html(lang='es')
    head
        meta(charset='utf-8')
        title Carpinteria-login
        link(rel="stylesheet", href="css/app.css")
    body(class="bg-slate-300")

    main(class="flex flex-col gap-6 justify-center items-center h-screen")

        h1(class=" text-5xl font-extrabold") Recupera tu Contraseña de 
            span(class="text-amber-700") Carpinteria.com

        form(action="" method="post" class=" p-3 flex flex-col gap-5 items-center")
            p(class="text-center") Escribe el correo de tu cuenta <br/> para enviarte un email de recuperacion.
            div(class="flex flex-col gap-2") 
                div(class="flex flex-col gap-1")
                    span(class="text-2xl") Correo 
                    input(type="email" class="bg-slate-200 w-72 p-1")
                div(class="flex justify-between")
                    a(href="/login" class="text-sm text-gray-600 hover:text-black") Inicia Sesión 
                    a(href="/registrate" class="text-sm text-gray-600 hover:text-black") Registrarse

            input(type="submit" value="Enviar" class="bg-amber-600 hover:bg-amber-500 cursor-pointer transition duration-300 px-5 py-2 font-extrabold") 
    